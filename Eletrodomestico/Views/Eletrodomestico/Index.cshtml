@model List<Eletrodosmetico>

<h1>Tabela de funcionalidade de Eletro Domésticos</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Consumo Energético</th>
            <th>Capacidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eletro in Model)
        {
            <tr>
                <td>@eletro.marca</td>
                <td>@eletro.modelo</td>
                <td>@eletro.ConsumoEnergetico</td>
                <td>
                    @if (eletro is Geladeira)
                    {
                        <strong>Tem Freezer:</strong> @(((Geladeira)eletro).TemFreezer ? "Sim" : "Não") <br />
                    }
                    else if (eletro is Televisor)
                    {
                        <strong>SMART: </strong> @(((Televisor)eletro).Smart ? "Sim" : "Não")
                    }
                </td>
            </tr>
        }
    </tbody>
</table>